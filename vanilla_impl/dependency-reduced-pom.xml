<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>minecarts-parent</artifactId>
    <groupId>org.minecarts</groupId>
    <version>1.13-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>vanilla_impl</artifactId>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <excludes>
          <exclude>*.properties</exclude>
        </excludes>
      </resource>
    </resources>
    <finalName>Minecarts-${minecraft.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <compilerArgs>
            <compilerArg>-AdefaultObfuscationEnv=notch</compilerArg>
            <compilerArg>-AreobfNotchSrgFile=${project.parent.basedir}/joined-reversed.tsrg</compilerArg>
            <compilerArg>-AoutRefMapFile=mixin.refmap.json</compilerArg>
          </compilerArgs>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <forceCreation>true</forceCreation>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.minecarts:minecraft-server</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>org.minecarts.vanilla.Main</Main-Class>
                    <TweakClass>org.spongepowered.asm.launch.MixinTweaker</TweakClass>
                    <MixinConfigs>mixins.json</MixinConfigs>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.md-5</groupId>
        <artifactId>specialsource-maven-plugin</artifactId>
        <version>1.2.1-CodeCrafter47-6-SNAPSHOT</version>
        <executions>
          <execution>
            <id>reobfuscate</id>
            <phase>package</phase>
            <goals>
              <goal>remap</goal>
            </goals>
            <configuration>
              <srgIn>${project.parent.basedir}/joined-reversed.tsrg</srgIn>
              <skipDebug>false</skipDebug>
              <copyResources>true</copyResources>
              <mixinSupport>true</mixinSupport>
              <remappedDependencies>
                <remappedDependency>org.minecarts:minecraft-server:${minecraft.version}:jar</remappedDependency>
              </remappedDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>mojang</id>
      <url>https://libraries.minecraft.net</url>
    </repository>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.minecarts</groupId>
      <artifactId>mcpdepend</artifactId>
      <version>1.13-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.minecarts</groupId>
      <artifactId>api</artifactId>
      <version>1.13-SNAPSHOT</version>
      <classifier>original</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.minecarts</groupId>
      <artifactId>minecraft-server</artifactId>
      <version>1.13</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

